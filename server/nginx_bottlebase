server {
        server_name localhost;

        listen  80;
        listen  [::]:80 default ipv6only=on;

        root /var/www/igames/apps/src;

        access_log /var/log/nginx/igames.access.log;
        error_log /var/log/nginx/igames.error.log;

        location /_spy/ {
                uwsgi_pass unix:/tmp/uwsgi.igames.socket;
                include uwsgi_params;
        }

        location /lib/ {
                alias /var/www/igames/apps/;
        }
}